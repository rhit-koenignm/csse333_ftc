{
    "compilerOptions": {
      "strict": true,
      "composite": true,

      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "CommonJS",
      "target": "ESNext",
      "lib": ["es5", "es2015", "es2016", "es2017", "ESNext"],
      "experimentalDecorators": true,
      "noImplicitReturns": true,
      "downlevelIteration": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "types": ["node"],
      "baseUrl": ".",
      "paths": {
      }
    },
    "include": [
      "./src/**/*.ts",
      "./src/**/*.tsx",
      "./test/**/*.ts"
    ]
  }